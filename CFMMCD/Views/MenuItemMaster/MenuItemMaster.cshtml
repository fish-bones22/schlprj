@model CFMMCD.Models.ViewModel.MenuItemMasterViewModel

@{
    ViewBag.Title = "Menu Item Master";
}

<h2>Menu Item Master</h2>
<div class="form-horizontal center">
    @using (Html.BeginForm("Search", "MenuItemMaster", FormMethod.Post, new { } ))
    {
        @Html.AntiForgeryToken()
        <div class="container-fluid">
            <div class="col-lg-2 label-container-left">
                <label class="form-label" for="menu-item">Menu item/ Product name</label>
            </div>
            <div class="col-lg-7">
                @Html.TextBoxFor(m => m.SearchBox, new { @class = "form-control" })
                <div class="input-group float-right" style="padding-top:8px">
                    <label class="checkbox-inline form-label">
                        @Html.CheckBoxFor(m => m.InactiveItemsCb)Show inactive items
                    </label>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-1">
                <button type="submit" class="btn btn-default" name="command" value="Search"><span class="glyphicon glyphicon-search"></span>&nbsp;Search</button>
            </div>
        </div>
    }
    @using (Html.BeginForm("UpdateDelete", "MenuItemMaster", FormMethod.Post, new { }))
    {
        <div class="container-fluid">
            <div class="col-lg-8">
                <div class="col-lg-8">

                    <div class="col-lg-12">
                        <div class="col-lg-6" style="padding:0">
                            <label class="form-label">Menu item number</label>
                            @Html.TextBoxFor(m => m.MIMMIC, new { @class = "form-control input-sm" })
                        </div>
                        <div class="col-lg-6" style="padding:0">
                            <label class="form-label">Short name</label>
                            @Html.TextBoxFor(m => m.MIMNAM, new { @class = "form-control input-sm" })
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-label">Description</label>
                            @Html.TextBoxFor(m => m.MIMDSC, new { @class = "form-control input-sm" })
                        </div>
                    </div>

                    <div class="col-lg-6">

                        <div class="form-group">
                            <label class="form-label" for="menu-item-1">PMX group</label>
                            @Html.DropDownListFor(m => m.MIMFGC, new SelectList(
                            new List<Object>{
                                new { value = "0" , text = "To be added after"  },
                                new { value = "1" , text = "product mix group" },
                                new { value = "2" , text = "implementation" }
                            },
                            "value",
                            "text",
                            "0"), new { @class = "form-control input-sm" })
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="menu-item-1">PMX main group 1</label>
                            @Html.DropDownListFor(m => m.MIMWGR, new SelectList(
                            new List<Object>{
                                new { value = "0" , text = "To be added after"  },
                                new { value = "1" , text = "product mix group" },
                                new { value = "2" , text = "implementation" }
                            },
                            "value",
                            "text",
                            "0"), new { @class = "form-control input-sm" })
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="menu-item-1">PMX main group 2</label>
                            @Html.DropDownListFor(m => m.MIMHPT, new SelectList(
                            new List<Object>{
                                new { value = "0" , text = "To be added after"  },
                                new { value = "1" , text = "product mix group" },
                                new { value = "2" , text = "implementation" }
                            },
                            "value",
                            "text",
                            "0"), new { @class = "form-control input-sm" })
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="menu-item-1">Daypart code</label>
                            @Html.DropDownListFor(m => m.MIMDPC, new SelectList(
                            new List<Object>{
                                new { value = "0" , text = "Breakfast"  },
                                new { value = "1" , text = "Lunch" },
                                new { value = "2" , text = "Breakfast+Lunch" }
                            },
                            "value",
                            "text",
                            "0"), new { @class = "form-control input-sm" })
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-label">Effective date</label>
                            @Html.TextBoxFor(m => m.MIMEDT, new { @class = "form-control input-sm", @type = "date" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">Status</label>
                            @Html.DropDownListFor(m => m.MIMSTA, new SelectList(
                            new List<Object>{
                                new { value = "0" , text = "0"  },
                                new { value = "1" , text = "1" }
                            },
                            "value",
                            "text",
                            "0"), new { @class = "form-control input-sm" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">Tax code</label>
                            @Html.TextBoxFor(m => m.MIMUTC, new { @class = "form-control input-sm" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-label">Location</label>
                            @Html.DropDownListFor(m => m.Location, new SelectList(
                            new List<Object>{
                                new { value = "0" , text = "To be added after"  },
                                new { value = "1" , text = "product mix group" },
                                new { value = "2" , text = "implementation" }
                            },
                            "value",
                            "text",
                            "0"), new { @class = "form-control input-sm" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">Region</label>
                            @Html.DropDownListFor(m => m.Region, new SelectList(
                            new List<Object>{
                                new { value = "0" , text = "To be added after"  },
                                new { value = "1" , text = "product mix group" },
                                new { value = "2" , text = "implementation" }
                            },
                            "value",
                            "text",
                            "0"), new { @class = "form-control input-sm" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">Province</label>
                            @Html.DropDownListFor(m => m.Province, new SelectList(
                            new List<Object>{
                                new { value = "0" , text = "To be added after"  },
                                new { value = "1" , text = "product mix group" },
                                new { value = "2" , text = "implementation" }
                            },
                            "value",
                            "text",
                            "0"), new { @class = "form-control input-sm" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">City</label>
                            @Html.DropDownListFor(m => m.City, new SelectList(
                            new List<Object>{
                                new { value = "0" , text = "To be added after"  },
                                new { value = "1" , text = "product mix group" },
                                new { value = "2" , text = "implementation" }
                            },
                            "value",
                            "text",
                            "0"), new { @class = "form-control input-sm" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">Store list</label>
                            @Html.TextBoxFor(m => m.StoreList, new { @class = "form-control input-sm" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">
                                @Html.CheckBoxFor(m => m.SelectAllCb)
                                Select all
                            </label>
                            <label class="form-label">
                                @Html.CheckBoxFor(m => m.SelectExcept)
                                Select except
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <table class="table table-responsive">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Eat in</th>
                                <th>Take out</th>
                                <th>Non-product</th>
                                <th>Others</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Tax</td>
                                <td>@Html.TextBoxFor(m => m.MIMTCI, new { @class = "form-control input-sm" })</td>
                                <td>@Html.TextBoxFor(m => m.MIMTCA, new { @class = "form-control input-sm" })</td>
                                <td>@Html.TextBoxFor(m => m.MIMNPT, new { @class = "form-control input-sm" })</td>
                                <td>@Html.TextBoxFor(m => m.MIMTCG, new { @class = "form-control input-sm" })</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row" style="overflow-y:scroll">
                    <table class="table table-responsive">
                        <thead>
                            <tr>
                                <th>Group name</th>
                                <th></th>
                                <th>Eat in</th>
                                <th>Take out</th>
                                <th>Non-product</th>
                                <th>Others</th>
                                <th>Effective date</th>
                            </tr>
                        </thead>
                        <tbody style="max-height:150px">
                            <tr>
                                <td>Tier A</td>
                                <td></td>
                                <td>@Html.TextBoxFor(m => m.MIMPRI, new { @class = "form-control input-sm" })</td>
                                <td>@Html.TextBoxFor(m => m.MIMPRO, new { @class = "form-control input-sm" })</td>
                                <td>@Html.TextBoxFor(m => m.MIMNPA, new { @class = "form-control input-sm" })</td>
                                <td>@Html.TextBoxFor(m => m.MIMPRG, new { @class = "form-control input-sm" })</td>
                                <td>@Html.TextBoxFor(m => m.MIMEDT, new { @class = "form-control input-sm", @type = "date" })</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td>New price</td>
                                <td>@Html.TextBoxFor(m => m.MIMNPI, new { @class = "form-control input-sm" })</td>
                                <td>@Html.TextBoxFor(m => m.MIMNPO, new { @class = "form-control input-sm" })</td>
                                <td>@Html.TextBoxFor(m => m.MIMNNP, new { @class = "form-control input-sm" })</td>
                                <td>@Html.TextBoxFor(m => m.MIMNPD, new { @class = "form-control input-sm" })</td>
                                <td>@Html.TextBoxFor(m => m.MIMPND, new { @class = "form-control input-sm", @type = "date" })</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="form-inline">
                        <button type="submit" name="command" value="Save" class="btn btn-default">Save</button>
                        <button type="submit" name="command" value="Delete" class="btn btn-default">Delete</button>
                    </div>
                </div>
            </div>
                
            <div class="col-lg-4">
                <label class="form-label">Recipe</label>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <table class="table table-responsive table-hover">
                            <thead>
                                <tr>
                                    <th>Raw item number</th>
                                    <th>Raw item name</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
