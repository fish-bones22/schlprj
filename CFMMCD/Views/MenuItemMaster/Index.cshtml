@model CFMMCD.Models.ViewModel.MenuItemMasterViewModel
@using CFMMCD.Models.ViewModel

@{
    ViewBag.Title = "Menu Item Master";
    int HasSearch = 0;
    if (TempData["SearchResult"] != null)
    {
        HasSearch = (int)TempData["SearchResult"];
    }
}

<div class="center">
    <h2>@ViewBag.Title</h2>
</div>
<!--Alerts-->
<div class="container">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissable fade in">@TempData["ErrorMessage"]<button class="close" data-dismiss="alert" aria-label="close">&times;</button></div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissable fade in">@TempData["SuccessMessage"]<button class="close" data-dismiss="alert" aria-label="close">&times;</button></div>
    }
</div>
<!--Main content starts here-->
<div class="form-horizontal">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="container-fluid">
            <div class="col-lg-2 label-container-left">
                <label class="form-label" for="menu-item">Menu item/ Product name</label>
            </div>
            <div class="col-lg-7">
                @Html.TextBoxFor(m => m.SearchItem, new { @class = "form-control" })
                <div class="input-group float-right" style="padding-top:8px">
                    <label class="checkbox-inline form-label">
                        @Html.CheckBoxFor(m => m.InactiveItemsCb)Show inactive items
                    </label>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-1">
                <button type="submit" class="btn btn-default" name="command" value="Search"><span class="glyphicon glyphicon-search"></span>&nbsp;Search</button>
            </div>
        </div>
    }
    <hr/>
    @using (Html.BeginForm("UpdateDelete", "MenuItemMaster", FormMethod.Post, new { }))
    {
        <div class="container-fluid">
            <div class="col-lg-8">
                <div class="col-lg-8">

                    <!--NP3 and NP6 Tab-->
                    <div class="col-lg-12">

                        <ul class="nav nav-tabs">
                            <li class="active"><a data-toggle="tab" href="#np3">NP3</a></li>
                            <li><a data-toggle="tab" href="#np6">NP6</a></li>
                        </ul>
                        <div class="tab-content" style="padding-top:10px">
                            <!--NP3-->
                            <div id="np3" class="tab-pane fade in active">
                                <div class="form-group">
                                    <div class="col-lg-6" style="padding-left:0">
                                        <label class="form-label">Menu item number</label>
                                        @Html.TextBoxFor(m => m.MIMMIC, new { @class = "form-control input-sm", @Value = Model.MIMMIC })
                                    </div>
                                    <div class="col-lg-6" style="padding:0">
                                        <label class="form-label">Short name</label>
                                        @Html.TextBoxFor(m => m.MIMNAM, new { @class = "form-control input-sm", @Value = Model.MIMNAM })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Long name</label>
                                    @Html.TextBoxFor(m => m.MIMLON, new { @class = "form-control input-sm", @Value = Model.MIMLON })
                                </div>
                            </div>
                            <!--NP6-->
                            <div id="np6" class="tab-pane fade in">
                                <div class="form-group">
                                    <div class="col-lg-6" style="padding-left:0">
                                        <label class="form-label">Menu item number (NP6)</label>
                                        @Html.TextBoxFor(m => m.MIMMIC_NP6, new { @class = "form-control input-sm", @Value = Model.MIMMIC_NP6})
                                    </div>
                                    <div class="col-lg-6" style="padding:0">
                                        <label class="form-label">Short name (NP6)</label>
                                        @Html.TextBoxFor(m => m.MIMNAM_NP6, new { @class = "form-control input-sm", @Value = Model.MIMNAM_NP6})
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Long name (NP6)</label>
                                    @Html.TextBoxFor(m => m.MIMLON_NP6, new { @class = "form-control input-sm", @Value = Model.MIMLON_NP6 })
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr/>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-label">Description</label>
                            @Html.TextBoxFor(m => m.MIMDSC, new { @class = "form-control input-sm", @Value = Model.MIMDSC })
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-label" for="menu-item-1">PMX group</label>
                            @Html.DropDownListFor(m => m.MIMFGC, new SelectList(
                            new List<Object>{
                                new { value = "0" , text = "To be added after"  },
                                new { value = "1" , text = "product mix group" },
                                new { value = "2" , text = "implementation" }
                            },
                            "value",
                            "text",
                            "0"), new { @class = "form-control input-sm", @Value = Model.MIMFGC })
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="menu-item-1">PMX main group 1</label>
                            @Html.DropDownListFor(m => m.MIMWGR, new SelectList(
                            new List<Object>{
                                new { value = "0" , text = "To be added after"  },
                                new { value = "1" , text = "product mix group" },
                                new { value = "2" , text = "implementation" }
                            },
                            "value",
                            "text",
                            "0"), new { @class = "form-control input-sm", @Value = Model.MIMWGR })
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="menu-item-1">PMX main group 2</label>
                            @Html.DropDownListFor(m => m.MIMHPT, new SelectList(
                            new List<Object>{
                                new { value = "0" , text = "To be added after"  },
                                new { value = "1" , text = "product mix group" },
                                new { value = "2" , text = "implementation" }
                            },
                            "value",
                            "text",
                            "0"), new { @class = "form-control input-sm", @Value = Model.MIMHPT })
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="menu-item-1">Daypart code</label>
                            @Html.DropDownListFor(m => m.MIMDPC, new SelectList(
                            new List<Object>{
                                new { value = "0" , text = "Breakfast"  },
                                new { value = "1" , text = "Lunch" },
                                new { value = "2" , text = "Breakfast+Lunch" }
                            },
                            "value",
                            "text",
                            "0"), new { @class = "form-control input-sm", @Value = Model.MIMDPC })
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-label">Effective date</label>
                            @Html.TextBoxFor(m => m.MIMEDT, new { @class = "form-control input-sm", @type = "date" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">Status</label>
                            @Html.DropDownListFor(m => m.MIMSTA, new SelectList(
                            new List<Object>{
                                new { value = "0" , text = "Active"  },
                                new { value = "1" , text = "Inactive" }
                            },
                            "value",
                            "text",
                            "0"), new { @class = "form-control input-sm", @Value = Model.MIMEDT})
                        </div>
                        <div class="form-group">
                            <label class="form-label">Tax code</label>
                            @Html.TextBoxFor(m => m.MIMUTC, new { @class = "form-control input-sm", @Value = Model.MIMUTC })
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-label">Location</label>
                            @Html.DropDownListFor(m => m.Location, new SelectList(
                            new List<Object>{
                                new { value = "0" , text = "To be added after"  },
                                new { value = "1" , text = "Location" },
                                new { value = "2" , text = "tier" }
                            },
                            "value",
                            "text",
                            "0"), new { @class = "form-control input-sm" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">Region</label>
                            @Html.DropDownListFor(m => m.Region, new SelectList(
                            new List<Object>{
                                new { value = "0" , text = "NCR"  },
                                new { value = "1" , text = "REGION I" },
                                new { value = "2" , text = "REGION II" }
                            },
                            "value",
                            "text",
                            "0"), new { @class = "form-control input-sm" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">Province</label>
                            @Html.DropDownListFor(m => m.Province, new SelectList(
                            new List<Object>{
                                new { value = "0" , text = "Batanggas"  },
                                new { value = "1" , text = "Laguna" },
                                new { value = "2" , text = "Quezon" }
                            },
                            "value",
                            "text",
                            "0"), new { @class = "form-control input-sm" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">City</label>
                            @Html.DropDownListFor(m => m.City, new SelectList(
                            new List<Object>{
                                new { value = "0" , text = "Batangas City"  },
                                new { value = "1" , text = "Lucena City" },
                                new { value = "2" , text = "Manila City" }
                            },
                            "value",
                            "text",
                            "0"), new { @class = "form-control input-sm" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">Store list</label>
                            @Html.TextBoxFor(m => m.StoreList, new { @class = "form-control input-sm" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">
                                @Html.CheckBoxFor(m => m.SelectAllCb)
                                Select all
                            </label>
                            <label class="form-label">
                                @Html.CheckBoxFor(m => m.SelectExcept)
                                Select except
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <table class="table table-responsive">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Eat in</th>
                                <th>Take out</th>
                                <th>Non-product</th>
                                <th>Others</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Tax</td>
                                <td>
                                    @Html.DropDownListFor(m => m.MIMTCI, new SelectList(
                                    new List<Object>{
                                        new { value = "01" , text = "Product" },
                                        new { value = "02" , text = "Non-product" }
                                    }, "value", "text", "0"), new { @class = "form-control input-sm", @Value = Model.MIMTCI })
                                </td>
                                <td>
                                    @Html.DropDownListFor(m => m.MIMTCA, new SelectList(
                                    new List<Object>{
                                        new { value = "01" , text = "Product" },
                                        new { value = "02" , text = "Non-product" }
                                    }, "value", "text", "0"), new { @class = "form-control input-sm", @Value = Model.MIMTCA })
                                </td>
                                <td>
                                    @Html.DropDownListFor(m => m.MIMNPT, new SelectList(
                                    new List<Object>{
                                        new { value = "01" , text = "Product" },
                                        new { value = "02" , text = "Non-product" }
                                    }, "value", "text", "0"), new { @class = "form-control input-sm", @Value = Model.MIMNPT })
                                </td>
                                <td>
                                    @Html.DropDownListFor(m => m.MIMTCG, new SelectList(
                                    new List<Object>{
                                        new { value = "01" , text = "Product" },
                                        new { value = "02" , text = "Non-product" }
                                    }, "value", "text", "0"), new { @class = "form-control input-sm", @Value = Model.MIMTCG })
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row" style="overflow-y:scroll">
                    <table class="table table-responsive">
                        <thead>
                            <tr>
                                <th>Group name</th>
                                <th></th>
                                <th>Eat in</th>
                                <th>Take out</th>
                                <th>Non-product</th>
                                <th>Others</th>
                                <th>Effective date</th>
                            </tr>
                        </thead>
                        <tbody style="max-height:150px">
                            <tr>
                                <td>Tier A</td>
                                <td></td>
                                <td>@Html.TextBoxFor(m => m.MIMPRI, new { @class = "form-control input-sm", @Value = Model.MIMPRI })</td>
                                <td>@Html.TextBoxFor(m => m.MIMPRO, new { @class = "form-control input-sm", @Value = Model.MIMPRO })</td>
                                <td>@Html.TextBoxFor(m => m.MIMNPA, new { @class = "form-control input-sm", @Value = Model.MIMNPA })</td>
                                <td>@Html.TextBoxFor(m => m.MIMPRG, new { @class = "form-control input-sm", @Value = Model.MIMPRG })</td>
                                <td>@Html.TextBoxFor(m => m.MIMEDT, new { @class = "form-control input-sm", @Value = Model.MIMEDT,  @type = "date" })</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td>New price</td>
                                <td>@Html.TextBoxFor(m => m.MIMNPI, new { @class = "form-control input-sm" })</td>
                                <td>@Html.TextBoxFor(m => m.MIMNPO, new { @class = "form-control input-sm" })</td>
                                <td>@Html.TextBoxFor(m => m.MIMNNP, new { @class = "form-control input-sm" })</td>
                                <td>@Html.TextBoxFor(m => m.MIMNPD, new { @class = "form-control input-sm" })</td>
                                <td>@Html.TextBoxFor(m => m.MIMPND, new { @class = "form-control input-sm", @Value = Model.MIMPND, @type = "date" })</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
                
            <div class="col-lg-4">
                <h4>Recipe</h4>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <table class="table table-responsive table-hover">
                            <thead>
                                <tr>
                                    <th>Raw item number</th>
                                    <th>Raw item name</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-inline bottom float" style="right:50px">
            <button type="submit" name="command" value="Save" class="btn btn-default">Save</button>
            <button type="submit" name="command" value="Delete" class="btn btn-default">Delete</button>
        </div>
    }
</div>

<!--Search result modal-->
<div class="modal fade" id="search-result-modal" role="dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button class="close" data-dismiss="modal">&times;</button>
            <h4>Search results</h4>
        </div>
        @using (Html.BeginForm("DisplaySearchResult", "MenuItemMaster", FormMethod.Post, new { }))
        {
            List<MenuItemMasterViewModel> MIMList = (List<MenuItemMasterViewModel>)Session["ViewModelList"];
            <div class="modal-body">
                @{if (HasSearch == 1 && MIMList != null)
                    {
                        foreach (MenuItemMasterViewModel vm in MIMList)
                        {
                            <button type="submit" class="modal-item-select" name="value" value=@vm.MIMMIC>
                                <div class="col-lg-3">
                                    @vm.MIMMIC
                                </div>
                                <div class="col-lg-9">
                                    @vm.MIMNAM
                                </div>
                            </button>
                        }
                    }
                }
            </div>
        }
    </div>
</div>

<script>
    $(window).ready(function () {
        if (@HasSearch === 1) {
            $("#search-result-modal").modal('show');
        }
    });
</script>
