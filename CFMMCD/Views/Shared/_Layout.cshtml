@using CFMMCD.Sessions
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</head>
<body>
    @{ 
        CurrentPageSession CPSession = (CurrentPageSession) Session["CurrentPage"];
        if (CPSession == null)
        {
            CPSession = new CurrentPageSession();
            CPSession.Self = new CurrentPageSession.LinkString
            {
                Action = "Login",
                Controller = "Account"
            };
        }

    }
    <div class="navbar navbar-fixed-top">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#"><img class="img-responsive" src="~/Content/Images/logo.png"></a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                @{
                    if (CPSession.Grandparent != null)
                    {
                        <li>@Html.ActionLink(CPSession.Grandparent.Action, CPSession.Grandparent.Action, CPSession.Grandparent.Controller)</li>
                    }
                    if (CPSession.Parent != null)
                    {
                        <li>@Html.ActionLink(CPSession.Parent.Action, CPSession.Parent.Action, CPSession.Parent.Controller)</li>
                    }
                    if (CPSession.Self != null)
                    {
                        <li>@Html.ActionLink(CPSession.Self.Action, CPSession.Self.Action, CPSession.Self.Controller)</li>
                    }
                }
            </ul>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - CFM McDonalds</p>
    </footer>

    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>